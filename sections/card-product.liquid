{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}

        {% if products != blank %}
          {% for product in products %}
            <div
              class="col-3"
              {{ block.shopify_attributes }}
            >
              <div
                class="product_card"
                data-variant-id="{{ product.selected_or_first_available_variant.id }}"
              >
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.title }}"
                      width="400"
                      height="400"
                      loading="lazy"
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h3>

                  <div class="price">
                    {% if product.compare_at_price > product.price %}
                      <span class="compare-price">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                    <span class="sale-price">
                      {{ product.price | money }}
                    </span>
                  </div>

                  <div class="act-button">
                    <button type="button" class="custom-atc-btn">Add to cart</button>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.custom-atc-btn');
    if (!btn) return;

    e.preventDefault();

    const productCard = btn.closest('.product_card');
    if (!productCard) return;

    const variantId = productCard.dataset.variantId;
    if (!variantId) return;

    // 1️⃣ Add product via AJAX
    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
      },
      body: JSON.stringify({
        id: variantId,
        quantity: 1,
      }),
    })
      .then(() => {
        // 2️⃣ Fetch updated cart sections (native Shopify way)
        return fetch('/?sections=cart-drawer,cart-icon-bubble');
      })
      .then((res) => res.json())
      .then((sections) => {
        // 3️⃣ Update cart drawer HTML
        const drawer = document.querySelector('cart-drawer');
        if (drawer && sections['cart-drawer']) {
          drawer.innerHTML = sections['cart-drawer'];
          drawer.open();
          return;
        }

        // 4️⃣ Fallback (open drawer button)
        document.querySelector('[aria-controls="CartDrawer"]')?.click();
      })
      .catch(console.error);
  });
</script>
{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
