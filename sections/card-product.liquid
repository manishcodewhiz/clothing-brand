{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="custom-atc-btn">Add to cart</button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('submit', async function (e) {
    const form = e.target.closest('.custom-atc-form');
    if (!form) return;

    e.preventDefault();

    // üî• EXACT SHOPIFY NATIVE WAY
    const formData = new FormData(form);

    // Required for cart drawer refresh
    const drawer = document.querySelector('cart-drawer');
    if (drawer && drawer.getSectionsToRender) {
      const sections = drawer.getSectionsToRender().map((s) => s.id);
      formData.append('sections', sections.join(','));
      formData.append('sections_url', window.location.pathname);
    }

    // 1Ô∏è‚É£ ADD PRODUCT (CORRECTLY)
    const response = await fetch('/cart/add', {
      method: 'POST',
      body: formData,
    });

    if (!response.ok) {
      console.error('Add to cart failed');
      return;
    }

    const state = await response.json();

    // 2Ô∏è‚É£ RENDER CART DRAWER CONTENTS
    if (drawer && drawer.renderContents) {
      drawer.renderContents(state);
      drawer.open();
    }
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
