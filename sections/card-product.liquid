    /* =========================
     CART COUNT BUBBLE UPDATE
  ========================= */
    function updateCartCountBubble() {
      fetch('/cart.js')
        .then((res) => res.json())
        .then((cart) => {
          const count = cart.item_count;

          const cartIcon = document.querySelector('.header__icon--cart') || document.querySelector('a[href="/cart"]');

          if (!cartIcon) return;

          let bubble = cartIcon.querySelector('.cart-count-bubble');

          if (!bubble && count > 0) {
            bubble = document.createElement('div');
            bubble.className = 'cart-count-bubble';
            bubble.innerHTML = `
            <span aria-hidden="true">${count}</span>
            <span class="visually-hidden">Cart (${count})</span>
          `;
            cartIcon.appendChild(bubble);
            return;
          }

          if (bubble) {
            if (count > 0) {
              bubble.querySelector('[aria-hidden="true"]').textContent = count;
              bubble.querySelector('.visually-hidden').textContent = `Cart (${count})`;
