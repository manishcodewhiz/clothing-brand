{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="custom-atc-btn">Add to cart</button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('submit', async function (e) {
    const form = e.target.closest('.custom-atc-form');
    if (!form) return;

    e.preventDefault();

    const variantId = form.querySelector('[name="id"]').value;

    // 1️⃣ ADD PRODUCT
    await fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
      },
      body: JSON.stringify({
        id: variantId,
        quantity: 1,
      }),
    });

    // 2️⃣ FETCH CART DRAWER SECTIONS (THIS WAS MISSING)
    const sections = document.querySelector('cart-drawer')?.getSectionsToRender?.();

    if (!sections) {
      console.error('Cart drawer not found');
      return;
    }

    const sectionIds = sections.map((section) => section.id).join(',');

    const response = await fetch(`/cart?sections=${sectionIds}`);
    const cartSections = await response.json();

    // 3️⃣ RENDER DRAWER CONTENTS
    sections.forEach((section) => {
      const element = document.getElementById(section.id);
      if (!element) return;

      element.innerHTML = cartSections[section.id].replace(new RegExp(`^<div[^>]*>|</div>$`, 'g'), '');
    });

    // 4️⃣ OPEN CART DRAWER
    const drawer = document.querySelector('cart-drawer');
    if (drawer) drawer.open();
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
