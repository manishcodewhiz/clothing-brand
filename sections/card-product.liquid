{% endcomment %}

<script>
  /* =========================
     ADD TO CART (FIXED, LOGIC SAME)
  ========================= */
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.custom-atc-btn');
    if (!btn) return;

    const form = btn.closest('.custom-atc-form');
    if (!form) return;

    const variantInput = form.querySelector('[name="id"]');
    const qtyInput = form.querySelector('[name="quantity"]');
    if (!variantInput || !qtyInput) return;

    /* ðŸ”¥ ENSURE CORRECT VARIANT BEFORE ADD */
    updateVariantId(form);

    const variantId = variantInput.value;
    const quantity = qtyInput.value;

    btn.disabled = true;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: variantId,
        quantity: quantity
      })
    })
      .then(() => fetch('/?sections=cart-drawer'))
      .then(res => res.json())
      .then(sections => {
        const html = sections['cart-drawer'];
        if (!html) return;

        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');

        const newDrawer = doc.querySelector('cart-drawer');
        const oldDrawer = document.querySelector('cart-drawer');

        if (!oldDrawer && newDrawer) {
          document.body.appendChild(newDrawer);
          newDrawer.open();
          return;
        }

        if (oldDrawer && newDrawer) {
          oldDrawer.replaceWith(newDrawer);
          newDrawer.open();
        }
      })
      .catch(err => console.error('ATC error:', err))
      .finally(() => {
        btn.disabled = false;
      });
  });


  /* =========================
     VARIANT CHANGE + FORCE UPDATE
  ========================= */
  document.addEventListener('change', function (e) {
    const select = e.target.closest('.variant-select');
    if (!select) return;

    const form = select.closest('.custom-atc-form');
    if (!form) return;

    updateVariantId(form);
  });


  /* =========================
     SHARED VARIANT FUNCTION
  ========================= */
  function updateVariantId(form) {
    const hiddenInput = form.querySelector('[name="id"]');
    if (!hiddenInput) return;

    const selects = form.querySelectorAll('.variant-select');
    if (!selects.length) return;

    const selectedOptions = [];

    selects.forEach(el => {
      const position = parseInt(el.dataset.optionPosition, 10) - 1;
      selectedOptions[position] = el.value;
    });

    const variants = {{ product.variants | json }};

    const matchedVariant = variants.find(variant =>
      variant.options.every((opt, index) => opt === selectedOptions[index])
    );

    if (matchedVariant) {
      hiddenInput.value = matchedVariant.id;
    }
  }
</script>

