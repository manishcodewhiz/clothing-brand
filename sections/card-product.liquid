{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form id="add-to-cart-form-{{ product.id }}">
                    <label>Choose an option:</label>
                    <select name="id">
                      {% for variant in product.variants %}
                        <option value="{{ variant.id }}">{{ variant.title }}</option>
                      {% endfor %}
                    </select>

                    <label>Quantity:</label>
                    <input type="number" name="quantity" value="1" min="1">

                    <button
                      type="button"
                      class="button add-to-cart-button"
                      data-product-id="{{ product.id }}"
                    >
                      Add to Cart
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('click', function (e) {
    const button = e.target.closest('.add-to-cart-button');
    if (!button) return;

    const form = button.closest('form');
    const variantId = form.querySelector('[name="id"]').value;
    const quantity = form.querySelector('[name="quantity"]').value;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        id: variantId,
        quantity: quantity,
      }),
    })
      .then((response) => response.json())
      .then(() => {
        // Get updated cart
        return fetch('/cart.js');
      })
      .then((response) => response.json())
      .then((cart) => {
        // ðŸ”¥ OPEN CART DRAWER (DAWN / OS 2.0)
        document.dispatchEvent(
          new CustomEvent('cart:refresh', {
            bubbles: true,
          })
        );

        document.dispatchEvent(
          new CustomEvent('cart:open', {
            bubbles: true,
          })
        );

        // Fallback (important)
        if (window.Shopify && Shopify.theme && Shopify.theme.cartDrawer) {
          Shopify.theme.cartDrawer.open();
        }
      })
      .catch((error) => console.error('ATC error:', error));
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "max_blocks": 1,
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
