{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy" width="" height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form" data-product-form>
                    <input
                      type="hidden"
                      name="id"
                      value="{{ product.selected_or_first_available_variant.id }}"
                    >

                    <button
                      type="submit"
                      class="custom-atc-btn button button--primary"
                      {% unless product.available %}
                        disabled
                      {% endunless %}
                    >
                      {% if product.available %}
                        Add to cart
                      {% else %}
                        Sold out
                      {% endif %}
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('submit', function (e) {
    const form = e.target.closest('.custom-atc-form');
    if (!form) return;

    e.preventDefault();

    const button = form.querySelector('button');
    button.setAttribute('aria-disabled', 'true');
    button.classList.add('loading');

    fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
      },
      body: JSON.stringify({
        id: form.querySelector('[name="id"]').value,
        quantity: 1,
      }),
    })
      .then((response) => response.json())
      .then(() => {
        // ðŸ”¥ OPEN SHOPIFY CART DRAWER (NATIVE)
        if (window.Shopify && Shopify.theme && Shopify.theme.cartDrawer) {
          Shopify.theme.cartDrawer.open();
        } else {
          document.dispatchEvent(new CustomEvent('cart:refresh'));
          document.dispatchEvent(new CustomEvent('cart:open'));
        }
      })
      .catch((error) => console.error(error))
      .finally(() => {
        button.classList.remove('loading');
        button.removeAttribute('aria-disabled');
      });
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
