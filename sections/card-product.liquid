{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url: width: 400 }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <!-- âœ… REAL SHOPIFY PRODUCT FORM (DO NOT REMOVE) -->
                  <form
                    method="post"
                    action="/cart/add"
                    class="product-form"
                  >
                    <input
                      type="hidden"
                      name="id"
                      value="{{ product.selected_or_first_available_variant.id }}"
                    >

                    <!-- THIS IS THE REAL THEME BUTTON -->
                    <button
                      type="submit"
                      class="product-form__submit"
                    >
                      Add to cart
                    </button>
                  </form>

                  <button type="button" class="custom-atc-btn">Add to cart</button>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('click', function (e) {
    const customBtn = e.target.closest('.custom-atc-btn');
    if (!customBtn) return;

    e.preventDefault();

    const card = customBtn.closest('.product_card');
    if (!card) return;

    // ðŸ”¥ Find the REAL theme ATC button
    const realAtc = card.querySelector('.product-form__submit');
    if (!realAtc) {
      console.error('Native ATC button not found');
      return;
    }

    // ðŸ”¥ THIS triggers cart drawer + bundle + app logic
    realAtc.click();
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
