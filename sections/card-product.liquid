{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form">
                    {%- if product.variants.size > 1 -%}
                      <select name="id">
                        {% for variant in product.variants %}
                          <option value="{{ variant.id }}">
                            {{ variant.title }}
                          </option>
                        {% endfor %}
                      </select>
                    {%- else -%}
                      <!-- Single variant product -->
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {%- endif -%}

                    <input type="number" name="quantity" value="1" min="1" class="quantity_input">

                    <button type="button" class="custom-atc-btn">Add to Cart</button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% comment %}
  <script>
    document.addEventListener('click', function (e) {
      const btn = e.target.closest('.custom-atc-btn');
      if (!btn) return;

      const form = btn.closest('.custom-atc-form');
      const variantId = form.querySelector('[name="id"]').value;
      const quantity = form.querySelector('[name="quantity"]').value;

      btn.disabled = true;

      fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: variantId,
          quantity: quantity,
        }),
      })
        .then(() => {
          /* ðŸ”¥ FETCH UPDATED CART DRAWER HTML */
          return fetch('/?sections=cart-drawer');
        })
        .then((res) => res.json())
        .then((sections) => {
          const cartDrawer = document.querySelector('cart-drawer');
          if (!cartDrawer) return;

          const parser = new DOMParser();
          const html = parser.parseFromString(sections['cart-drawer'], 'text/html');

          const newDrawer = html.querySelector('cart-drawer');
          if (newDrawer) {
            cartDrawer.innerHTML = newDrawer.innerHTML;
            cartDrawer.open();
          }
        })
        .catch((err) => console.error('ATC error:', err))
        .finally(() => {
          btn.disabled = false;
        });
    });
  </script>
{% endcomment %}

<script>
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.custom-atc-btn');
    if (!btn) return;

    const form = btn.closest('.custom-atc-form');
    const variantId = form.querySelector('[name="id"]').value;
    const quantity = form.querySelector('[name="quantity"]').value;

    btn.disabled = true;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: variantId,
        quantity: quantity,
      }),
    })
      .then(() => fetch('/?sections=cart-drawer'))
      .then((res) => res.json())
      .then((sections) => {
        const html = sections['cart-drawer'];
        if (!html) return;

        const parser = new DOMParser();
        const doc = parser.parseFromString(html, 'text/html');

        const newDrawer = doc.querySelector('cart-drawer');
        const oldDrawer = document.querySelector('cart-drawer');

        /* ðŸ”¥ EMPTY CART FIX */
        if (!oldDrawer && newDrawer) {
          document.body.appendChild(newDrawer);
          newDrawer.open();
          return;
        }

        if (oldDrawer && newDrawer) {
          oldDrawer.replaceWith(newDrawer);
          newDrawer.open();
        }
      })
      .catch((err) => console.error('ATC error:', err))
      .finally(() => {
        btn.disabled = false;
      });
  });
</script>
