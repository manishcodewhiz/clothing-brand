{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form">
                    <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="custom-atc-btn">Add to cart</button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('submit', async (e) => {
    const form = e.target.closest('.custom-atc-form');
    if (!form) return;

    e.preventDefault();

    const variantId = form.querySelector('[name="id"]').value;

    await fetch('/cart/add.js', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
      },
      body: JSON.stringify({
        id: variantId,
        quantity: 1,
      }),
    });

    /*
   ðŸ”¥ THIS IS THE KEY PART
   This mimics Shopify native behavior
  */

    // 1. Re-render cart sections (drawer)
    if (window.Shopify && Shopify.theme && Shopify.theme.cartDrawer) {
      Shopify.theme.cartDrawer.renderContents();
      Shopify.theme.cartDrawer.open();
      return;
    }

    // 2. Dawn / OS 2.0 fallback
    const cartDrawer = document.querySelector('cart-drawer');
    if (cartDrawer) {
      cartDrawer.renderContents();
      cartDrawer.open();
      return;
    }

    // 3. Final fallback
    document.dispatchEvent(new CustomEvent('cart:refresh'));
    document.dispatchEvent(new CustomEvent('cart:open'));
  });
</script>

{% schema %}
{
  "name": "Custom Product Cards",
  "settings": [],
  "blocks": [
    {
      "type": "product",
      "name": "Product Card",
      "settings": [
        {
          "type": "product_list",
          "id": "product_item",
          "label": "Select product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Product Cards"
    }
  ]
}
{% endschema %}
