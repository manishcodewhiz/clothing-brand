<script>
  /* =========================
   VARIANT CHANGE
========================= */
  document.addEventListener('change', function (e) {
    if (!e.target.classList.contains('variant-select')) return;

    const wrapper = e.target.closest('.variant-wrapper');
    if (!wrapper) return;

    const productData = JSON.parse(wrapper.dataset.product);
    const card = wrapper.closest('.product-card');
    if (!card) return;

    const form = card.querySelector('.custom-atc-form');
    const variantInput = form.querySelector('[name="id"]');

    let selectedOptions = [];

    wrapper.querySelectorAll('.variant-select').forEach((select) => {
      selectedOptions.push(select.value);
    });

    const matchedVariant = productData.variants.find((variant) =>
      variant.options.every((opt, i) => opt === selectedOptions[i])
    );

    if (matchedVariant && variantInput) {
      variantInput.value = matchedVariant.id;
    }
  });

  /* =========================
   ADD TO CART
========================= */
  document.addEventListener('click', function (e) {
    const btn = e.target.closest('.custom-atc-btn');
    if (!btn) return;

    const form = btn.closest('.custom-atc-form');
    if (!form) return;

    const variantInput = form.querySelector('[name="id"]');
    const qtyInput = form.querySelector('[name="quantity"]');

    if (!variantInput || !variantInput.value) return;

    btn.disabled = true;

    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({
        id: variantInput.value,
        quantity: qtyInput ? qtyInput.value : 1,
      }),
    })
      .then(() => fetch('/?sections=cart-drawer'))
      .then((res) => res.json())
      .then((sections) => {
        const html = sections['cart-drawer'];
        if (!html) return;

        const doc = new DOMParser().parseFromString(html, 'text/html');
        const newDrawer = doc.querySelector('cart-drawer');
        const oldDrawer = document.querySelector('cart-drawer');

        if (!oldDrawer && newDrawer) {
          document.body.appendChild(newDrawer);
          newDrawer.open();
        }

        if (oldDrawer && newDrawer) {
          oldDrawer.replaceWith(newDrawer);
          newDrawer.open();
        }

        updateCartCountBubble();
      })
      .catch((err) => console.error('ATC error:', err))
      .finally(() => {
        btn.disabled = false;
      });
  });

  /* =========================
   CART COUNT UPDATE
========================= */
  function updateCartCountBubble() {
    fetch('/cart.js')
      .then((res) => res.json())
      .then((cart) => {
        const count = cart.item_count;
        const cartIcon = document.querySelector('.header__icon--cart') || document.querySelector('a[href="/cart"]');

        if (!cartIcon) return;

        let bubble = cartIcon.querySelector('.cart-count-bubble');

        if (!bubble && count > 0) {
          bubble = document.createElement('div');
          bubble.className = 'cart-count-bubble';
          bubble.innerHTML = `
          <span aria-hidden="true">${count}</span>
          <span class="visually-hidden">Cart (${count})</span>
        `;
          cartIcon.appendChild(bubble);
        }

        if (bubble) {
          if (count > 0) {
            bubble.querySelector('[aria-hidden="true"]').textContent = count;
            bubble.querySelector('.visually-hidden').textContent = `Cart (${count})`;
          } else {
            bubble.remove();
          }
        }
      });
  }
</script>

