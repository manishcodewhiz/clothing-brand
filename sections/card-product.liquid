{{ 'section-card-product.css' | asset_url | stylesheet_tag }}

<div class="section-card-product">
  <div class="page-width">
    <div class="row">
      {% for block in section.blocks %}
        {% assign products = block.settings.product_item %}
        {% if products != blank %}
          {% for product in products %}
            <div class="col-3" {{ block.shopify_attributes }}>
              <div class="product_card">
                <div class="product_block">
                  <a href="{{ product.url }}">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      alt="{{ product.title }}"
                      loading="lazy"
                      width=""
                      height=""
                    >
                  </a>
                </div>

                <div class="product_content">
                  <h3>{{ product.title }}</h3>
                  <div class="price">{{ product.price | money }}</div>

                  <form class="custom-atc-form">
                    {% if product.has_only_default_variant == false %}
                      {% for option in product.options_with_values %}
                        <select
                          class="variant-select"
                          data-option-position="{{ option.position }}"
                        >
                          {% for value in option.values %}
                            <option value="{{ value }}">{{ value }}</option>
                          {% endfor %}
                        </select>
                      {% endfor %}
                    {% endif %}

                    <!-- ALWAYS REQUIRED -->
                    <input
                      type="hidden"
                      name="id"
                      value="{{ product.selected_or_first_available_variant.id }}"
                    >

                    <input type="number" name="quantity" value="1" min="1">

                    <button type="button" class="custom-atc-btn">Add to Cart</button>
                  </form>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

