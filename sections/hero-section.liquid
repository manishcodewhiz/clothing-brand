{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="section-hero">
  <div class="page-width">
    <div class="hero_item">
      <div class="hero-block">
        {% if section.settings.hero_image != blank %}
          <img src="{{ section.settings.hero_image |  image_url  }}" width="" height="" alt="Hero Image" loading="lazy">
        {% endif %}
      </div>
      <div class="hero-content">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
         {{ section.settings.description }}
        {% endif %}
        {% if section.settings.button_url != blank or section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="button-main">{{ section.settings.button_text }}</a>
        {% endif %}
        {% if section.settings.text_url != blank or section.settings.text_title != blank %}
          <a href="{{ section.settings.text_url }}" class="button-text">{{ section.settings.text_title }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Url Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "text_url",
      "label": "Text Url"
    },
    {
      "type": "text",
      "id": "text_title",
      "label": "Text Title"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
