{% if block.type == 'menu' %}
  <div class="nav-menu-dropdown page-width">
    <div class="menu-dropdown-content">
      <div class="main-menu-block">
        <ul class="first-level-menu first-level-desktop">
          {% for link in link.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>

        <div class="main-item {{ link.title | handleize }} {% if forloop.index == 1 %}show-menu{% endif %}">
          {% for block in section.blocks %}
            {% if block.settings.title == link.title %}
              {% if block.type == 'inner_menu' %}
                <div class="first-level-menu_items logo-item">
                  <div class="first-level-shop_list">
                    <h3>{{ block.settings.title }}</h3>
                    <ul class="second-level-menu-list">
                      {% for link in block.settings.secondary_menu.links %}
                        {% assign logo = link.object.metafields.custom.logo.value %}
                        <li>
                          <a href="{{ link.url }}"
                            ><img src="{{ logo | image_url }}" width="100" height="38" alt="" loading="lazy">
                            {{- link.title -}}
                          </a>
                        </li>
                      {% endfor %}
                    </ul>
                  </div>
                  {% for link in block.settings.secondary_menu.links %}
                    <div class="row">
                      {% for sublink in link.links %}
                        {% assign product = sublink.object %}
                        <div class="product-main_box">
                          {% render 'card-product',
                            card_product: product,
                            buttons: block.settings.buttons,
                            section_id: section.id
                          %}
                        </div>
                      {% endfor %}
                    </div>
                  {% endfor %}
                </div>
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>

        <div class="main-item {{ link.title | handleize }} {% if forloop.index == 1 %}show-menu{% endif %}">
          {% for block in section.blocks %}
            {% if block.settings.title == link.title %}
              {% if block.type == 'collection_list' %}
                {% for collection in block.settings.collection_list %}
                  <div class="collection-list">
                    <a href="{{ collection.url }}">
                      <span>
                        {% if collection.image != blank %}
                          <img
                            src="{{ collection.image | image_url }}"
                            alt="{{ collection.title | default: 'mancode' }}"
                            height="205"
                            width="180"
                            loading="lazy"
                          >
                        {% elsif collections.products_count > 0 and collection.products.first.featured_image != blank %}
                          <img
                            src="{{ collection.products.first.featured_image | image_url }}"
                            alt="{{ collection.products.first.title | default: 'mancode' }}"
                            height="205"
                            width="180"
                            loading="lazy"
                          >
                        {% else %}
                          <img
                            src="https://cdn.shopify.com/s/files/1/0707/7756/9461/files/noimage.webp?v=1751355676"
                            alt="{{ collection.title | default: 'mancode' }}"
                            height="205"
                            width="180"
                          >
                        {% endif %}
                      </span>
                      <p>{{ collection.title }}</p>
                    </a>
                  </div>
                {% endfor %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

