{% if block.type == 'menu' %}
  <div class="nav-menu-dropdown page-width">
    <div class="menu-dropdown-content">
      
      {% if link.links.size > 0 %}
        <!-- First Level Menu Tabs -->
        <ul class="first-level-menu first-level-desktop">
          {% for link in link.links %}
            {% assign has_sub_children = false %}
            {% for block in section.blocks %}
              {% if block.settings.title == link.title and block.type == 'brand-product-menu' or block.type == 'product-menu' %}
                {% assign has_sub_children = true %}
              {% endif %}
            {% endfor %}
            <li 
              class="{% if forloop.index == 1 %}active {% endif %}{% if has_sub_children %}has-sub-children{% endif %}" 
              data-tabid="{{ link.title | handleize }}"
            >
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}

      <!-- First Level Menu Panels -->
      {% if link.links.size > 0 %}
        {% for link in link.links %}
          <div class="main-menu {{ link.title | handleize }} {% if forloop.index == 1 %}show-menu{% endif %}">
            {% for block in section.blocks %}
              {% if block.settings.title == link.title %}

                {% if block.type == 'brand-product-menu' %}
                  {% if block.settings.inner_menu != blank %}
                    <div class="first-level-menu_items logo-item">
                      <div class="first-level-shop_list">
                        {% if block.settings.collection_list_heading != blank %}
                          <div class="brand-title">
                            {{ block.settings.collection_list_heading }}
                          </div>
                        {% endif %}

                        <div class="second-level-menu-list">
                          {% for brand_link in block.settings.inner_menu.links %}
                            <a href="{{ brand_link.url }}" data-tabid="{{ brand_link.title | handleize }}">
                              {% if brand_link.object.metafields.custom.logo %}
                                <img 
                                  src="{{ brand_link.object.metafields.custom.logo | image_url }}" 
                                  alt="{{ brand_link.title }}" 
                                  width="100"
                                >
                              {% endif %}
                            </a>
                          {% endfor %}
                        </div>
                      </div>

                      <div class="row">
                        {% for brand_link in block.settings.inner_menu.links %}
                          {% if brand_link.links.size > 0 %}
                            <div 
                              class="product-main_box brands-product-list brands-products-{{ brand_link.title | handleize }}" 
                              data-tabid="{{ brand_link.title | handleize }}"
                            >
                              {% for sublink in brand_link.links %}
                                {% assign product = sublink.object %}
                                {% if product %}
                                  <div class="product-card">
                                    {% render 'card-product', 
                                      card_product: product, 
                                      shopnow_button: block.settings.shopnow_button, 
                                      section_id: section.id 
                                    %}
                                  </div>
                                {% endif %}
                              {% endfor %}
                            </div>
                          {% endif %}
                        {% endfor %}
                      </div>
                    </div>
                  {% endif %}

                {% elsif block.type == 'product-menu' %}
                  <div class="first-level-menu_items">
                    <div class="first-level-shop_list">
                      {% if block.settings.heading != blank %}
                        <h3>{{ block.settings.heading }}</h3>
                      {% else %}
                        <h3>Shop By Color</h3>
                      {% endif %}
                      <ul class="second-level-menu-list">
                        {% for i in (1..10) %}
                          {% assign color = block.settings["color_"] | append: [i] %}
                          {% if color != blank %}
                            <li><a href="#">{{ color }}</a></li>
                          {% endif %}
                        {% endfor %}
                      </ul>
                    </div>

                    {% if section.settings.featured_image %}
                      <div class="first-level-shop_image-block">
                        <span class="image_level">
                          <img 
                            src="{{ section.settings.featured_image | image_url }}" 
                            width="282" 
                            height="266" 
                            alt="Featured" 
                            loading="lazy"
                          >
                        </span>
                      </div>
                    {% endif %}

                    <div class="first-level-card">
                      <div class="main-card_item">
                        <span class="image-span">
                          <img 
                            src="{{ section.settings.featured_image | image_url }}" 
                            width="432" 
                            height="266" 
                            alt="Banner" 
                            loading="lazy"
                          >
                        </span>
                        <div class="main-card_item_text">
                          <span>New Arrivals</span>
                          <h2>New Nail Lacquers Collection</h2>
                          <a href="#">Shop Now</a>
                        </div>
                      </div>
                    </div>
                  </div>
                {% endif %}

              {% endif %}
            {% endfor %}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
{% endif %}
