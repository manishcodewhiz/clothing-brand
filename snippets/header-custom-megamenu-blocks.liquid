{%  if block.type == 'menu' %}
<div class="nav-menu-dropdown page-width">
  <div class="menu-dropdown-content">
    <div class="main-menu-block">
      <!-- First Level Tabs -->
      <ul class="first-level-menu first-level-desktop">
        <li><a href="#">Shop By Brand</a></li>
        <li><a href="#">Shop By Product</a></li>
      </ul>

      <!-- BRAND BLOCKS -->
      <div class="first-level-menu_items logo-item">
        <div class="first-level-shop_list">
          <h3>Shop By Brand</h3>
          <ul class="second-level-menu-list">
            {% for block in section.blocks %}
              {% if block.type == 'brand_logo' %}
                <li>
                  <a href="{{ block.settings.link }}">
                    <img
                      src="{{ block.settings.brand_logo | image_url }}"
                      width="100"
                      height="38"
                      alt="{{ block.settings.brand_logo.alt | escape }}"
                      loading="lazy"
                    />
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>

        <!-- PRODUCT BLOCKS -->
        <div class="row">
          {% for block in section.blocks %}
            {% if block.type == 'product_card' %}
              {% assign product = all_products[block.settings.product] %}
              <div class="product-main_box">
                <div class="product-block">
                  <img
                    src="{{ product.featured_image | image_url }}"
                    width="206"
                    height="206"
                    alt="{{ product.title }}"
                    loading="lazy"
                  />
                </div>
                <div class="product_content">
                  <a href="{{ product.url }}">
                    <h3>{{ product.title }}</h3>
                  </a>
                  <div class="add_to_card">
                    {%- render 'buy-buttons',
                      product: product,
                      product_form_id: 'mega-menu-product-' | append: block.id,
                      section_id: section.id
                    -%}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- COLOR FILTER + BANNER -->
      <div class="first-level-menu_items">
        <div class="first-level-shop_list">
          <h3>Shop By Color</h3>
          <ul class="second-level-menu-list">
            {% for block in section.blocks %}
              {% if block.type == 'color_link' %}
                <li><a href="{{ block.settings.color_link }}">{{ block.settings.color_name }}</a></li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>

        <div class="first-level-shop_image-block">
          <span class="image_level">
            <img
              src="{{ section.settings.side_image | image_url }}"
              width="282"
              height="266"
              loading="lazy"
              alt=""
            />
          </span>
        </div>

        <div class="first-level-card">
          <div class="main-card_item">
            <span class="image-span">
              <img
                src="{{ section.settings.featured_banner | image_url }}"
                width="432"
                height="266"
                loading="lazy"
                alt=""
              />
            </span>
            <div class="main-card_item_text">
              <span>{{ section.settings.banner_subtitle }}</span>
              <h2>{{ section.settings.banner_title }}</h2>
              <a href="{{ section.settings.banner_button_link }}">{{ section.settings.banner_button_label }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
